<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/textView1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="50dip" android:text="@string/explication"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/nomCompte">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:layout_height="wrap_content" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_margin="50dip" android:id="@+id/button1" android:text="@string/button_ok"></Button>
    <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/listView1"></ListView>
</LinearLayout>
